<h1>new todo</h1>
<p><%= @sample %></p>

<% if @todo.errors.any? %>
    <h2>The following errors prevented the todo from being saves</h2>
    <ul>
        <% @todo.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @todo do |f| %>
    <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :description %><br>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>

<%= link_to "back", root_path %>